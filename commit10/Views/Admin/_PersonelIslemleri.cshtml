@model IEnumerable<WebApplication1.Models.Personel>

@{
    ViewData["Title"] = "Personel İşlemleri";
}

<h2>Personel İşlemleri</h2>

<!-- Personel Ekleme Formu -->
<form method="post" action="@Url.Action("Ekle", "PersonelIslemleri")">
    <input type="text" name="Ad" placeholder="Ad" required />
    <input type="text" name="UzmanlikAlani" placeholder="Uzmanlık Alanı" />
    <button type="submit">Ekle</button>
</form>

<!-- Personel Listeleme -->
<table style="width: 100%; margin-top: 20px; border: 1px solid #ddd;">
    <thead>
        <tr>
            <th>Ad</th>          
            <th>Uzmanlık</th>
            <th>Durum</th>
            <th>İşlem</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var personel in Model)
        {
            <tr>
                <td>@personel.AdSoyad</td>                
                <td>@personel.UzmanlikAlani</td>
                <td>@personel.MusaitlikDurumu ? "Aktif" : "Pasif"</td>
                <td>
                    <a href="@Url.Action("Sil", "PersonelIslemleri", new { id = personel.PersonelID })">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
