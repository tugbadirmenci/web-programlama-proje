<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Kuaför Salonum</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEJ3Q5zY7Q1zNwJaz6zST28oTkC9S7eycGV9hbHiAnq8eq2WlrmjyAQkWrbpo" crossorigin="anonymous">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body {
            background-color: #f9f9f9;
            color: #333;
        }
        .navbar {
            background-color: #ff8cc2;
        }
        .navbar a {
            color: #fff !important;
        }
        .hero {
            background: url('/img/foto1.jpg') no-repeat center center;
            background-size: cover;
            height: 400px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #fff;
            text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.7);
        }
        .hero h1 {
            font-size: 3rem;
        }
        .gallery img {
            width: 100%;
            height: auto;
            border-radius: 5px;
            margin-bottom: 20px;
        }
        .gallery {
            margin-top: 30px;
        }
        .footer {
            background-color: #000;
            color: #fff;
            padding: 20px 0;
        }
        .footer p {
            margin: 0;
        }
        .btn-main {
            background-color: #ff8cc2;
            color: #fff;
            border: none;
        }
        .btn-main:hover {
            background-color: #ff4aae;
            color: #fff;
        }
        .login-btn {
            color: #fff !important;
            border: 1px solid #fff;
            border-radius: 5px;
            padding: 5px 10px;
            margin-left: auto;
        }
        .login-btn:hover {
            background-color: #fff;
            color: #ff8aca7a !important;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Kuaför Salonum</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="About">Hakkımızda</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Services">Hizmetlerimiz</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Contact">İletişim</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-main" asp-area="" asp-controller="Home" asp-action="RandevuAl">Randevu Al</a>
                        </li>
                    </ul>
                    <!-- Admin Girişi -->
                    <a class="btn login-btn me-2" asp-area="" asp-controller="Account" asp-action="AdminLogin">Admin Girişi</a>
                    <!-- Kayıt Ol -->
                    <a class="btn register-btn" asp-area="" asp-controller="Account" asp-action="Register">Kayıt Ol</a>
                </div>
            </div>
        </nav>
        <div class="hero">
            <h1>Kuaför Salonumuza Hoş Geldiniz</h1>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <section class="gallery row">
            <div class="col-md-4">
                <img src="/img/foto2.jpg" alt="Kuaför Görsel 1" class="img-fluid" />
            </div>
            <div class="col-md-4">
                <img src="/img/foto4.jpg" alt="Kuaför Görsel 2" class="img-fluid" />
            </div>
            <div class="col-md-4">
                <img src="/img/foto3.jpg" alt="Kuaför Görsel 3" class="img-fluid" />
            </div>
            </section>
            @RenderBody()
        </main>
    </div>
    <!-- Bootstrap JS'i dahil et (opsiyonel) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka5kE9Jd3xj24jwhzjIz8uHZ3DgxdipKH8YNhF3Zh0ZXp3+k5rZKKZROzEJ7Dvnz" crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
